{
  "name": "evero",
  "version": "1.0.92",
  "description": "The new machine to make machines",
  "main": "out/main/index.js",
  "author": "",
  "license": "ISC",
  "scripts": {
    "build": "node scripts/build-win.js",
    "pack": "electron-builder --win --x64",
    "dist": "electron-builder --win --x64 --publish never"
  },
  "build": {
    "appId": "com.evero.app",
    "productName": "EveRo",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "node_modules/**/*",
      "resources/**/*",
      "package.json"
    ],
    "asar": true,
    "npmRebuild": false,
    "asarUnpack": [
      "**/*.node",
      "**/*.dll",
      "node_modules/@anthropic-ai/claude-agent-sdk/**",
      "node_modules/@img/sharp-win32-x64/**",
      "node_modules/better-sqlite3/**",
      "node_modules/node-pty/**"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "resources/icon.ico",
      "artifactName": "${productName}-${version}-win-x64.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "EveRo"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    },
    "protocols": {
      "name": "evero",
      "schemes": [
        "evero"
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "Evilander",
      "repo": "evero",
      "releaseType": "release"
    },
    "extraResources": [
      {
        "from": "resources/hooks",
        "to": "hooks"
      }
    ]
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.7",
    "@codemirror/lang-markdown": "^6.5.0",
    "@codemirror/language": "^6.12.1",
    "@codemirror/state": "^6.5.4",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.39.12",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@floating-ui/dom": "^1.7.5",
    "@img/sharp-win32-x64": "^0.33.5",
    "@supabase/supabase-js": "^2.93.1",
    "@tiptap/extension-code-block-lowlight": "^3.18.0",
    "@tiptap/extension-link": "^3.18.0",
    "@tiptap/extension-table": "^3.18.0",
    "@tiptap/extension-task-item": "^3.18.0",
    "@tiptap/extension-task-list": "^3.18.0",
    "@tiptap/pm": "^3.18.0",
    "@tiptap/react": "^3.18.0",
    "@tiptap/starter-kit": "^3.18.0",
    "better-sqlite3": "^12.6.2",
    "chokidar": "^5.0.0",
    "codemirror": "^6.0.2",
    "d3-force": "^3.0.0",
    "dotenv": "^17.2.3",
    "electron-updater": "^6.7.3",
    "express": "^5.2.1",
    "lowlight": "^3.3.0",
    "lucide-react": "^0.562.0",
    "node-pty": "^1.1.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-grab": "^0.0.98",
    "react-markdown": "^10.1.0",
    "rehype-highlight": "^7.0.2",
    "remark-gfm": "^4.0.1",
    "tiptap-markdown": "^0.9.0",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0",
    "xterm-addon-web-links": "^0.9.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.3",
    "electron": "^39.5.2",
    "electron-builder": "^26.7.0"
  }
}
